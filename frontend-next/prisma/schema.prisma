generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  imageUrl    String
  stock       Int
  faceShape   String
  createdAt   DateTime @default(now())
}

model Order {
  id        String   @id @default(cuid())
  items     Json     // [{ productId, quantity }]
  total     Float
  paid      Boolean  @default(false)
  createdAt DateTime @default(now())
}
